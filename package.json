{
	"name": "smart-contracts",
	"version": "2.0.0",
	"description": "The smart contracts which make up the WeatherXM system. (weatherxm.com)",
	"scripts": {
		"setup": "npm install && forge install",
		"prepare": "husky install",
		"test:sol": "npm run generate:testing-data && forge test --ffi",
		"test:spec": "npx hardhat test test/*.spec.ts",
		"test:integration": "npx hardhat --config hardhat-fork.config.ts test",
		"test:all": "npm run generate:testing-data && npx hardhat --config hardhat-fork.config.ts test && forge test --ffi",
		"coverage": "forge coverage --ffi",
		"coverage:report": "forge coverage --ffi --report lcov && genhtml lcov.info -o coverage --branch-coverage",
		"compile": "forge compile",
		"clean": "yarn hardhat clean && rm -rf types/generated && forge clean",
		"test:foundry:weatherxm": "forge test --mp test-foundry/WeatherXM.t.sol -vvvv",
		"format": "prettier --config .prettierrc --write \"src/**/*.sol\" \"**/*.ts\" \"**/*.md\" \"**/*.yml\" \"**/*.json\"",
		"check:sizes": "forge build --sizes",
		"lint": "solhint \"src/*.sol\" && solhint \"src/test-helpers/*.sol\" && solhint --config src/interfaces/.solhint.json \"src/interfaces/*.sol\" && prettier -c 'src/**/*.sol' && eslint \"**/*.ts\"",
		"lint:fix": "prettier --write 'src/**/*.sol' && eslint --fix \"**/*.ts\"",
		"slither": "python3 -m venv .venv && .venv/bin/python -m pip install slither-analyzer && .venv/bin/python -m slither . --print human-summary --json output.json",
		"docs": "./node_modules/.bin/hardhat docgen",
		"pretty-quick": "pretty-quick",
		"forknode:start": "yarn hardhat node --hostname 127.0.0.1 --config hardhat-fork.config.ts",
		"generate:testing-data": "npx ts-node test-foundry/scripts/encode.ts",
		"class:diagram": "npx sol2uml -sc deeppink -tc white -fc dimgrey -bc black ./src -o classDiagram.svg",
		"flatten:rewardpool": "forge flatten ./src/RewardPool.sol -o ./src/RewardPool_flattened.sol",
		"storage:diagram:rewardpool": "npx sol2uml storage -c RewardPool ./src/RewardPool_flattened.sol"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/WeatherXM/smart-contracts.git"
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/WeatherXM/smart-contracts/issues"
	},
	"engines": {
		"npm": ">=9.4.0",
		"node": ">=16.14.0"
	},
	"devDependencies": {
		"@ethersproject/abi": "^5.7.0",
		"@ethersproject/providers": "^5.7.2",
		"@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
		"@nomicfoundation/hardhat-foundry": "^1.0.0",
		"@nomicfoundation/hardhat-network-helpers": "^1.0.8",
		"@nomicfoundation/hardhat-toolbox": "^2.0.2",
		"@nomiclabs/hardhat-ethers": "^2.2.2",
		"@nomiclabs/hardhat-solhint": "^3.0.0",
		"@openzeppelin/hardhat-upgrades": "^1.22.1",
		"@openzeppelin/merkle-tree": "^1.0.2",
		"@typechain/hardhat": "^6.1.5",
		"@types/chai": "^4.3.4",
		"@types/mocha": "^10.0.1",
		"@types/node": "^18.15.0",
		"@typescript-eslint/eslint-plugin": "^5.55.0",
		"@typescript-eslint/parser": "^5.55.0",
		"babel-register": "^6.26.0",
		"chai": "^4.3.7",
		"dotenv": "^16.0.3",
		"eslint": "^8.36.0",
		"ethereumjs-util": "^7.1.5",
		"ethers": "^5.7.2",
		"hardhat": "^2.14.0",
		"hardhat-docgen": "^1.3.0",
		"hardhat-foundry": "^0.0.5",
		"hardhat-gas-reporter": "^1.0.9",
		"husky": "^8.0.3",
		"lodash": "^4.17.21",
		"mocha": "^10.2.0",
		"prettier": "^2.8.4",
		"prettier-plugin-solidity": "^1.1.3",
		"pretty-quick": "^3.1.3",
		"sol2uml": "^2.5.3",
		"solhint": "^3.4.1",
		"solidity-docgen": "^0.6.0-beta.35",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5",
		"web3-utils": "^1.8.1"
	},
	"overrides": {
		"@nomicfoundation/hardhat-toolbox": {
			"solidity-coverage": "^0.8.2"
		}
	},
	"homepage": "https://github.com/WeatherXM/smart-contracts#readme"
}
